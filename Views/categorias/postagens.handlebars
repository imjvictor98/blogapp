<h1>{{categoria.nome}}</h1>
{{#each postagens}}
    <div class="card">
        <div class="card-body">
            <h3>{{titulo}}</h3>
            <p>Descricao: {{descricao}}</p>
            <small>Data de publicacao: {{#formatDate data}}{{/formatDate}}</small><br>
            <p>{{conteudo}}</p>
        </div>
    </div>
{{else}}
    <h5>Nenhuma postagem</h5>
{{/each}}