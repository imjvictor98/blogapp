<hr>
<h2>Postagens recentes: </h2>

{{#each postagens}}
    <div class="card mt-4">
        <div class="card-body">
            <h3>{{titulo}}</h3>
            <p>Descricao: {{descricao}}</p>
            <small>Categoria: {{categoria.nome}}</small><br>
            <small>Data de publicacao: {{#formatDate data}}{{/formatDate}}</small><br>
            <a href="/postagem/{{slug}}">
                <button class="btn btn-primary mt-2">Leia mais</button>
            </a>
        </div>
    </div>
{{else}}
    <h5>Nenhuma postagem</h5>
{{/each}}
