<h2>Lista de postagens: </h2>
<hr>
<a href="/admin/postagens/add"><button class="btn btn-primary">Nova postagem</button></a>
{{#each postagens}}
    <div class="card mt-4">
        <div class="card-body">
            <h4>{{titulo}}</h4>
            <p>Descricao: {{descricao}}</p>
            <small>Data: {{#formatDate data}}{{/formatDate}}</small><br>
            <small>Categoria: {{categoria.nome}}</small><br>
            <a href="/admin/postagens/edit{{_id}}">
                <button class="btn btn-primary mt-4">Editar Postagem</button>

            </a>
            <a href="/admin/postagens/deletar/{{_id}}">
                <button class="btn btn-danger mt-4">Excluir Postagem</button>
            </a>

        </div>
    </div>
{{else}}
    <p>Nenhuma postagem registrada</p>
{{/each}}
