<h2>Lista de categorias: </h2>
<hr>
{{#each categorias}}
    <div class="card mt-4">
        <div class="card-body">
            <h4>{{nome}}</h4>
            <small>Slug: {{slug}}</small>
            <br>
            <small>Data: {{#formatDate data}}{{/formatDate}}</small><br>
            <a href='/admin/categorias/edit/{{_id}}'><button class='btn btn-primary mt-4'>Editar categoria</button></a>
            <form action="/admin/categorias/deletar" method="post">
              <input type="hidden" name="id" value="{{_id}}">
              <button class="btn btn-danger mt-2" type="submit" name="button">Deletar categoria</button>
            </form>
        </div>
    </div>
{{else}}
  <h4>Nenhuma categoria registrada!</h4>
{{/each}}
<a href="/admin/categorias/add"><button class="btn btn-primary">Nova categoria</button></a>
